// prisma-project/projectSchema.prisma
generator client {
  provider      = "prisma-client-js"
  output        = "../lib/prisma-project"
}

datasource db {
  provider = "postgresql"
  url      = env("PROJECT_DATABASE_URL")
}

enum Status {
  TODO
  IN_PROGRESS
  DONE
  ERROR
}

enum Priority {
  LOW
  MEDIUM
  HIGH
}

model Group {
  id        String   @id @default(cuid())
  name      String   @unique
  createdAt DateTime @default(now())
  tasks     Task[]
}

model Task {
  id          String   @id @default(cuid())
  title       String
  description String?
  status      Status   @default(TODO)
  priority    Priority @default(MEDIUM)
  userId      String?
  group       Group    @relation(fields: [groupId], references: [id])
  groupId     String
  position    Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
